@page "/My_profile"
<section class="my-profile">
    <div class="container">
        <h1 class="profile-title mx-auto">Your Profile</h1>
        <div class="row mt-4">    
                <div class="col-lg-5 mb-3">
                    <div class="profile text-center">
                        <img src="/Images/user4.png">
                    </div>
                    <div class="edit-photo text-center">
                        <a href="#">Change Photo</a>
                    </div>
                    <div class="profile-info text-center">
                        <p class="name">
                            User Name: Nur Ahad
                        </p>
                         <p class="mobile">
                            Mobile No: 01632526708
                        </p>
                         <p class="email">
                            Email: antorahad6@gmail.com
                        </p>
                        <p class="gender">
                            Gender: Male
                        </p>
                        <p class="location">
                            Location: House No:F-27, Road No:S-4, Mirpur, Dhaka-1216
                        </p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <form class="bg-light border-0 rounded-3 shadow p-4 mx-auto">  
                       
                                  <div class="form-floating mb-2">
                                    <input type="text" class="form-control profile-user" id="floatingInputGroup1" placeholder="Username">
                                    <label for="floatingInputGroup1">Username</label>
                                  </div>
                          

                          
                                  <div class="form-floating  mb-2">
                                    <input type="password" class="form-control profile-password" id="floatingPassword" placeholder="Password">
                                    <label for="floatingInputGroup1">Password</label>
                                  </div>
                            

                          
                                  <div class="form-floating  mb-2">
                                    <input type="input" class="form-control profile-mobile" id="floating-input" placeholder="input">
                                    <label for="floatingInputGroup1">Mobile No</label>
                                  </div>
                         
                              
                                  <div class="form-floating  mb-2">
                                    <input type="email" class="form-control profile-email" id="floatingPassword" placeholder="email">
                                    <label for="floatingInputGroup1">Email Address</label>
                                  </div>
                               
                                <div class="form-floating mb-2">
                                <select class="form-select profile-gender" id="floatingSelect" aria-label="Floating label select example">
                                <option selected>Select Gender</option>
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                                <option value="3">Other</option>
                              </select>
                                  <label for="floatingSelect">Gender</label>
                                </div>

                                <div class="form-floating mb-3">
                                  <textarea class="form-control profile-location" placeholder="Location Address" id="floatingTextarea2" style="height: 100px"></textarea>
                                  <label for="floatingTextarea2">Location</label>
                                </div>

                                <div class="text-center">
                                    <button class="btn btn-info edit-btn">Update Profile</button>
                                </div>
                    </form>                               
                </div>
        </div>
    </div>
</section>



