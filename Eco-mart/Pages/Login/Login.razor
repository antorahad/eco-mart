@page "/Login"
@layout LoginLayout

    <section class="login-form">
        <div class="container">
            <h1 class="text-dark category-title mb-4 text-center">Welcome To Eco-Cart</h1>

            <form class="rounded bg-white shadow p-5 log-form">
                <div class="text-center logo-img"><img src="/Images/logo.png" class="img-fluid"></div>

                <div class="form-floating mb-3">
                    <input type="email" class="form-control email-form" id="floatingInput"
                        placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" class="form-control log-pass" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>

                <div class="form-check d-flex align-items-center">
                    <input class="form-check-input chck-box" type="checkbox" id="gridCheck" checked>
                    <label class="form-check-label ms-2" for="gridCheck">
                        Remember Me
                    </label>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn log-btn mt-4">Login</button>
                </div>
                <h6 class="mt-3 text-center">Don't have an account?</h6>
                <div class="text-center"><a href="/Registration">
                        Sign-up here
                    </a></div>

            </form>
        </div>
    </section>

